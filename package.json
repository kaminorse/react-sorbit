  "exports": {
    ".": {
      "types": "./dist/types/react-sorbit.d.ts",
      "import": "./dist/react-sorbit.js",
      "require": "./dist/react-sorbit.umd.js"
    }
  },
  "peerDependencies": {
    "react": "^18.2.0",
